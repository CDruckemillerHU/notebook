<h1>Page Collections</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @page_collections.each do |page_collection| %>
      <tr>
        <td><%= link_to 'Show', page_collection %></td>
        <td><%= link_to 'Edit', edit_page_collection_path(page_collection) %></td>
        <td><%= link_to 'Destroy', page_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

