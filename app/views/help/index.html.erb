<h4>
  <%= link_to data_vault_path, class: 'grey-text tooltipped', style: 'position: relative; top: 4px;', data: {
        position: 'bottom',
        enterDelay: '500',
        tooltip: "Back to your Data Vault"
      } do %>
    <i class="material-icons">arrow_back</i>
  <% end %>
  Help center
</h4>

<h5>About our worldbuilding pages</h5>
<div class="row">
  <% Rails.application.config.content_types[:all].each do |content_type| %>
    <div class="col s12 m4 l3">
      <%= link_to send("#{content_type.name.downcase}_worldbuilding_info_path") do %>
        <div class="hoverable card-panel <%= content_type.color %> white-text">
          <i class="material-icons left"><%= content_type.icon %></i>
          <%= content_type.name.pluralize %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

