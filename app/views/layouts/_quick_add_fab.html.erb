<% if user_signed_in? %>
  <div class="fixed-action-btn" style="bottom: 25px; right: 24px;">
    <a class="btn-floating btn-large blue-grey">
      <i class="large material-icons">add</i>
    </a>
    <ul>
      <% @activated_content_types.each do |content_type_string| %>
        <% content_type = content_type_string.constantize %>
        <li>
          <%= link_to main_app.new_polymorphic_path(content_type), class: "btn-floating #{content_type.color}" do %>
            <i class="material-icons tooltipped" data-position="left" data-tooltip="New <%= content_type.name %>">
              <%= content_type.icon %>
            </i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
