<div class="row">
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title">
					90-day signups
				</div>
				<%= area_chart @reports.select(:user_signups).group_by_day(:day) %>
			</div>
		</div>
	</div>
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title">
					Monthly subscriptions
				</div>
				<%= area_chart @reports.select(:new_monthly_subscriptions, :ended_monthly_subscriptions).group_by_day(:day) %>
			</div>
		</div>
	</div>
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title">
					Trimonthly subscriptons
				</div>
				<%= area_chart @reports.select(:new_trimonthly_subscriptions, :ended_trimonthly_subscriptions).group_by_day(:day) %>
			</div>
		</div>
	</div>
	<div class="col s12">
		<div class="card">
			<div class="card-content">
				<div class="card-title">
					Annual subscriptions
				</div>
				<%= area_chart @reports.select(:new_annual_subscriptions, :ended_annual_subscriptions).group_by_day(:day) %>
			</div>
		</div>
	</div>

	<% Rails.application.config.content_types[:all].each do |content_type| %>
		<div class="col s12 m12 l4">
			<div class="card">
				<div class="card-content">
					<div class="card-title">
						New <%= content_type.name.pluralize %>
					</div>
					<%= area_chart @reports.select("#{content_type.name.downcase.pluralize}_created").group_by_day(:day) %>
				</div>
			</div>
		</div>
	<% end %>
</div>
